# ls
alias l="ls"
alias ll="ls -l"
alias la="ls -lart"

# project
alias pj=change_project

# bundle
alias b="bundle"
alias be="bundle exec"
alias bi="bundle install"
alias bu="bundle update"

# git
alias g="git"

# Tests and Specs
alias t="ruby -I test"
alias s="rspec"
alias cuc="cucumber"

# Todo
alias t="todo.sh -d ~/.todo_config"

# Rubygems
alias gi="gem install"
alias giv="gem install -v"

# Edit file hosts
alias eh="sudo vim /etc/hosts"

# start pry in current rail project
alias pryr="pry -r ./config/environment.rb"

# start mongodb
alias ms="mongod run --config /usr/local/etc/mongod.conf"

# start redis
alias redis="redis-server /usr/local/etc/redis.conf"

# Tmux
alias tx="tmux"
alias txk="tmux kill-session -t"

# Tmuxinator
alias p=open_project

# Reload Shell
alias reload="exec $SHELL"

# console
alias console="p console"
