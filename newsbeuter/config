# vim-like navigation
bind-key j down
bind-key k up
bind-key h left
bind-key l right 
bind-key m toggle-show-read-feeds

notify-xterm yes
auto-reload yes
reload-time 30
reload-only-visible-feeds yes
suppress-first-reload yes
confirm-exit yes
goto-next-feed no
max-items 500
refresh-on-startup no
show-read-feeds no
show-read-articles no
text-width 72
prepopulate-query-feeds yes
browser "open /Applications/Google\\ Chrome.app"

# solarized color scheme for newsbeuter <http://www.newsbeuter.org/>
# more on solarized: http://ethanschoonover.com/solarized
color listnormal color244 color234
color listfocus  color166 color235 
color info       color136 color235 
color background color244 color234
color article    color244 color234
